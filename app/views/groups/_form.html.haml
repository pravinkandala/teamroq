= form_for @group do |f|
  - if @group.errors.any?
    .alert.alert-error
      %h3= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      - @group.errors.full_messages.each do |msg|
        %p= msg
  %fieldset
    %h5
      - if action_name == "edit"
        Amend a Group
      - else  
        Add a Group

    .field.small-top-margin
      = f.text_field :name,:class=>"input group-name", :id => 'group-name', :placeholder => 'Enter group name'
    .field
      = f.text_field :description,:class=>"input group-description", :id => 'group-description', :placeholder => 'Enter group description'
    .field
      = text_field_tag :user_list, nil, :class=>"input tagsinput add-users-tagsinput", :placeholder => 'Start typing users name'
    .row.medium-top-margin
      .medium.rounded.primary.metro.btn
        = f.submit 'Save Group!' ,:class=>'weighted'
      = link_to 'Back', :back, :class=> "pull_right weighted"