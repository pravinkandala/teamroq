
<div class="six columns centered login-box">
  <h4>
    Sign into Teamroq
  </h4>
  <%= form_for(resource, :as => resource_name, :url => user_session_path) do |f| %>
    <%= devise_error_messages! %>

 
  <div class="field">
  <%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :class=> "input" %>
  </div>

  <div class="field"><%= f.label :password %>
  <%= f.password_field :password, :class=> "input" %></div>

  <div class="medium rounded metro primary btn"><%= f.submit "Login", :class=> "weighted" %></div>
<% end %>

<p>
Forgot Password? Click
<%= link_to "here", new_password_path(resource_name), :class=> "weighted" %> 
</p>


</div>


