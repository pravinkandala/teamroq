= form_for [@group,@group_role] do |f|
  - if @group_role.errors.any?
    #error_explanation
      %h5= "#{pluralize(@group_role.errors.count, "error")} prohibited this group_role from being saved:"
      %ul
        - @group_role.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :group
    = f.text_field :group, class: "input"
  .field
    = f.label :user
    = f.text_field :user, class: "input"
  .field
    = f.label "email"
    = f.email_field(:user_email), class: "input"
  .actions
    = f.submit 'Save'
