.wrapper-box
  .row
    .one.column
      = image_tag activity.user.profile_picture.url(:small), :class=>"middle-image"
    .eleven.columns
      %p.post-name
        = link_to activity.user.name , activity.user, :class=>'post-user-name'
        has started a discussion:
        = link_to activity.trackable.title.truncate(TRIM_LENGTH, separator: ' '), [activity.affected, activity.trackable]
        %small.item-time-ago
          = time_ago_in_words activity.updated_at
          ago
.wrapper-box   
  .row
    .eleven.columns.push_one   
      %p.concise-text
        = activity.trackable.content.truncate(TRIM_LENGTH_BIG, separator: ' ')
